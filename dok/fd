version: "3"
services:
    influxdb:
        image: influxdb:2.0
        container_name: dokInfluxUni
        expose:
            - "8086"
        networks:
            - mynet
    app:
        image: UniWebSite
        container_name: dokWebUni
        ports:
            - 0.0.0.0:8000:8000
        working_dir: /app
        environment:
            DOCKER_INFLUXDB_INIT_ORG: my-org
            DOCKER_INFLUXDB_INIT_BUCKET: my-bucket 
            DOCKER_INFLUXDB_INIT_TOKEN: token
        depends_on:
            - influxdb
        networks:
            - mynet
networks:
    mynet:
	      driver: bridge
        ipam:
            config:
                - subnet: 192.168.222.0/24
